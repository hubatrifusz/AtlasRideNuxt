{
  "name": "atlasride",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "kill-port 3001 --silent && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:ci": "turbo run test:run"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "kill-port": "^2.0.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.40.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
